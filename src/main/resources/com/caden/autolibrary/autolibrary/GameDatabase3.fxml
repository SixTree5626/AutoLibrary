<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.caden.autolibrary.autolibrary.GameDatabaseController">
    <children>
        <!-- Title Row -->
        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Title:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="titleField" promptText="e.g., The Witcher 3" prefWidth="200.0" />
            </children>
        </VBox>

        <!-- Developer Row -->
        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Developer(s):">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="developerField" promptText="e.g., CD Projekt Red" prefWidth="200.0" />
            </children>
        </VBox>

        <!-- Genre Row -->
        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Genre(s):">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="genreField" promptText="e.g., RPG, Action" prefWidth="200.0" />
            </children>
        </VBox>

        <!-- Release Date Row -->
        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Release Date:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="releaseDateField" promptText="e.g., November 12, 2024" prefWidth="200.0" />
            </children>
        </VBox>

        <!-- Buttons Row -->
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="addBtn" onAction="#onAddBtnClick" text="Add Game" />
                <Button fx:id="backBtn" onAction="#onBackBtnClick" text="Go Back" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>